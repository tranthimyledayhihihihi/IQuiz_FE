<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iq5"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="36" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.example.iq5.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.iq5.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.IQ5" >

        <!-- Launcher: SplashActivity -->

        <activity
            android:name="com.example.iq5.feature.auth.ui.SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Auth -->
        <activity
            android:name="com.example.iq5.feature.auth.ui.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.example.iq5.feature.auth.ui.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="com.example.iq5.feature.auth.ui.HomeActivity"
            android:exported="false" />
        <activity
            android:name="com.example.iq5.feature.auth.ui.ProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.example.iq5.feature.auth.ui.SettingsActivity"
            android:exported="false" />

        <!-- Quiz -->
        <activity
            android:name="com.example.iq5.feature.quiz.ui.SelectCategoryActivity"
            android:exported="false" />
        <activity
            android:name="com.example.iq5.feature.quiz.ui.QuizActivity"
            android:exported="false" />
        <activity
            android:name="com.example.iq5.feature.quiz.ui.ReviewQuestionActivity"
            android:exported="false" />

        <!-- Result / Reward / Stats -->
        <activity
            android:name="com.example.iq5.feature.result.ui.ResultActivity"
            android:exported="false" />
        <activity
            android:name="com.example.iq5.feature.result.ui.DailyRewardActivity"
            android:exported="false" />
        <activity
            android:name="com.example.iq5.feature.result.ui.AchievementActivity"
            android:exported="false" />
        <activity
            android:name="com.example.iq5.feature.result.ui.StatsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.iq5.feature.result.ui.StreakActivity"
            android:exported="false" />

        <!-- MainActivity chỉ để debug (không launcher) -->
        <activity
            android:name="com.example.iq5.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.example.iq5.feature.multiplayer.ui.FindMatchActivity"
            android:exported="false" />
        <activity
            android:name="com.example.iq5.feature.multiplayer.ui.RoomLobbyActivity"
            android:exported="false" />
        <activity
            android:name="com.example.iq5.feature.multiplayer.ui.PvPBattleActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name="com.example.iq5.feature.multiplayer.ui.CompareResultActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name="com.example.iq5.feature.multiplayer.ui.FriendsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.iq5.feature.multiplayer.ui.LeaderboardActivity"
            android:exported="false" />

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:directBootAware="true"
            android:exported="false" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.iq5.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>