<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp"
    android:paddingHorizontal="16dp"
    android:layout_marginBottom="4dp"
    android:background="@color/color_white">

    <ImageView
        android:id="@+id/img_milestone_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:src="@drawable/ic_fire"
        app:tint="@color/color_streak_fire"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="Milestone Icon"/>

    <TextView
        android:id="@+id/tv_milestone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        tools:text="Longest Streak"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/color_black"
        app:layout_constraintStart_toEndOf="@id/img_milestone_icon"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_milestone_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        tools:text="Đạt 50 ngày liên tiếp"
        android:textSize="12sp"
        android:textColor="@color/color_text_tertiary"
        app:layout_constraintStart_toEndOf="@id/img_milestone_icon"
        app:layout_constraintTop_toBottomOf="@id/tv_milestone_title"/>

    <TextView
        android:id="@+id/tv_milestone_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        tools:text="50 DAYS"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/color_streak_fire"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>