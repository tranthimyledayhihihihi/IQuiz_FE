<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_bg_secondary">

    <LinearLayout
        android:id="@+id/toolbar_achieve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back_achieve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/color_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành tựu"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:textColor="@color/color_black"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_achieve"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_stats_achieve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:paddingVertical="12dp"
                    android:background="@drawable/bg_achievement_header_gradient">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tv_unlocked_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đã mở khóa"
                            android:textSize="14sp"
                            android:textColor="@color/color_black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tv_total_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng số"
                            android:textSize="14sp"
                            android:textColor="@color/color_black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tv_percent_complete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="67%"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hoàn thành"
                            android:textSize="14sp"
                            android:textColor="@color/color_black"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_next_milestone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_milestone_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cột Mốc Tiếp Theo"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_black"/>

                    <TextView
                        android:id="@+id/tv_milestone_reward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phần thưởng: +XP"
                        android:textSize="14sp"
                        android:textColor="@color/color_black"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tv_milestone_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mục tiêu: 0/100"
                        android:textSize="14sp"
                        android:textColor="@color/color_text_secondary"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tv_milestone_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã hoàn thành: 0%"
                        android:textSize="14sp"
                        android:textColor="@color/color_text_secondary"
                        android:layout_marginTop="4dp"/>

                    <ProgressBar
                        android:id="@+id/pb_milestone_progress"
                        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progress="0"
                        android:progressTint="@color/color_primary"
                        android:layout_marginTop="8dp"
                        android:indeterminate="false"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã mở khóa"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_achievements_unlocked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="16dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_achievement"
                android:minHeight="350dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chưa mở khóa"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_achievements_locked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="16dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_achievement"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>