<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9FB"  android:padding="32dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IQ5 Quiz App"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#000000"  android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toTopOf="@+id/btnStartQuiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnStartQuiz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BẮT ĐẦU QUIZ"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#6C4FFF"  android:textColor="#FFFFFF"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnReview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/btnReview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="XEM LẠI CÂU HỎI"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#E8E3FF"  android:textColor="#6C4FFF"  style="@style/Widget.AppCompat.Button.Borderless" app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@+id/btnStartQuiz"
        app:layout_constraintBottom_toTopOf="@+id/btnSpecialMode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnSpecialMode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CHẾ ĐỘ ĐẶC BIỆT"
        android:padding="16dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="#00D4FF"  android:textColor="#FFFFFF"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@+id/btnReview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>