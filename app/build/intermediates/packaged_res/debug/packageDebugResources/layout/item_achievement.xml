<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_columnWeight="1"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/color_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:gravity="center">

        <!-- Container cho Badge Icon và Icon -->
        <FrameLayout
            android:id="@+id/fl_badge_container"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp">

            <!-- Icon chính (Cúp, Lửa, Sách, Sét) -->
            <ImageView
                android:id="@+id/img_achievement_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@drawable/ic_trophyy"/>

            <!-- Badge nhỏ góc trên bên phải (Tùy chọn: dùng cho trạng thái mới/mở khóa) -->
            <!-- Giả định bạn có ic_badge_status.xml -->
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="top|end"
                android:src="@drawable/ic_badge_status"
                app:tint="@color/color_cyan_accent"
                android:contentDescription="Status Badge"/>
        </FrameLayout>

        <!-- Tiêu đề (Vô địch tuần, Streak 30) -->
        <TextView
            android:id="@+id/tv_achievement_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Vô địch tuần"
            android:textSize="16sp"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            android:gravity="center"/>

        <!-- Mô tả/Điều kiện (Top 1 bảng xếp hạng) -->
        <TextView
            android:id="@+id/tv_achievement_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="Top 1 bảng xếp hạng"
            android:textSize="12sp"
            android:textColor="@color/color_text_tertiary"
            android:gravity="center"/>

        <!-- Progress Bar cho trạng thái chưa mở khóa (Tùy chọn: Ẩn nếu đã mở khóa) -->
        <ProgressBar
            android:id="@+id/pb_achievement_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:progress="70"
            android:max="100"
            android:progressDrawable="@drawable/bg_progress_bar_achievement"
            android:visibility="gone" />

    </LinearLayout>
</androidx.cardview.widget.CardView>