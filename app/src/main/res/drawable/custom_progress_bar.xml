<?xml version="1.0" encoding="utf-8"?>
<!-- Thanh thời gian đếm ngược -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Nền của progress bar (màu xám nhạt) -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="#E0E0E0" />
        </shape>
    </item>

    <!-- Phần tiến trình (progress) (màu gradient) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <!-- Gradient từ Xanh -> Vàng -> Đỏ -->
                <gradient
                    android:startColor="@color/colorWin"
                    android:centerColor="#FFEB3B"
                    android:endColor="@color/colorLose"
                    android:angle="0" />
            </shape>
        </clip>
    </item>
</layer-list>