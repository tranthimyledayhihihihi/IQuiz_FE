<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".feature.multiplayer.ui.RoomLobbyActivity">

    <TextView
        android:id="@+id/tvRoomCodeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MÃ PHÒNG"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvRoomCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABCD1"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/tvRoomCodeLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnShareCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_share"
        android:text="Chia sẻ"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvRoomCode" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvRoomCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Khu vực 2 người chơi -->
    <LinearLayout
        android:id="@+id/playersContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <!-- Người chơi 1 (Chủ phòng) -->
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:background="@drawable/bg_player_lobby"
            android:layout_marginEnd="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPlayer1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_avatar_default"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorAccent"/>

            <TextView
                android:id="@+id/tvPlayer1Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn (Chủ phòng)"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorPrimaryDark"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VS"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextSecondary" />

        <!-- Người chơi 2 (Đang chờ) -->
        <LinearLayout
            android:id="@+id/player2Container"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:background="@drawable/bg_player_lobby_waiting"
            android:layout_marginStart="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPlayer2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_avatar_placeholder" />

            <TextView
                android:id="@+id/tvPlayer2Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang chờ..."
                android:textStyle="italic"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorTextSecondary"/>

            <ProgressBar
                android:id="@+id/progressPlayer2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:visibility="visible"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvWaitingMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đang chờ người chơi khác tham gia..."
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/playersContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStartGame"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Bắt Đầu"
        android:textSize="18sp"
        android:textStyle="bold"
        android:enabled="false"
        app:icon="@drawable/ic_play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hủy phòng"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textColor="@color/colorError"
        app:layout_constraintBottom_toTopOf="@id/btnStartGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>