<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/bg_secondary">

    <TextView
        android:id="@+id/tvTitleSearch"
        android:text="Tìm kiếm người chơi"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvSubtitleSearch"
        android:text="Nhập tên để xem thử hệ thống tìm ra những ai (mock)."
        android:textColor="@color/text_tertiary"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <EditText
        android:id="@+id/edtQuery"
        android:hint="Nhập tên người chơi..."
        android:textColorHint="@color/text_tertiary"
        android:textColor="@color/text_primary"
        android:background="@drawable/bg_card"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <Button
        android:id="@+id/btnSearch"
        android:text="Tìm kiếm"
        android:textAllCaps="false"
        android:textColor="@color/bg_primary"
        android:backgroundTint="@color/purple_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider_1dp" />

    <TextView
        android:id="@+id/tvResult"
        android:text="Kết quả sẽ hiển thị tại đây"
        android:textColor="@color/text_tertiary"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
