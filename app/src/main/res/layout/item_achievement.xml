<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="8dp"
    android:layout_margin="4dp">

    <FrameLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="5dp"
        android:background="@drawable/bg_circle_badge"
        app:layout_constraintDimensionRatio="1:1">
        <ImageView
            android:id="@+id/img_achievement_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_badge_default"
            app:tint="@color/cyan_accent" android:contentDescription="@string/achievements_title" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_achievement_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên Thành Tựu"
        android:textSize="14sp"
        android:textColor="@color/text_primary_dark" android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:ellipsize="end" />

    <ProgressBar
        android:id="@+id/pb_achievement_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:progress="50"
        android:progressTint="@color/color_success" android:backgroundTint="@color/border_light" android:layout_marginTop="4dp" />

</LinearLayout>