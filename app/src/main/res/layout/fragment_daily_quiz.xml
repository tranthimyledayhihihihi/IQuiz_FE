<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/black">


    <TextView
        android:id="@+id/tvTitle"
        android:text="Quiz mỗi ngày"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tvTimer"
        android:text="00:30"
        android:textColor="@color/gray_60"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/gray_10"
        app:strokeColor="@color/gray_30"
        app:strokeWidth="1dp"
        app:cardCornerRadius="16dp"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvQuestion"
                android:text="Câu hỏi mẫu: 2 + 2 = ?"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpt1"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:text="3"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <View android:layout_width="match_parent" android:layout_height="8dp"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpt2"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:text="4"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <View android:layout_width="match_parent" android:layout_height="8dp"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpt3"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:text="5"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <View android:layout_width="match_parent" android:layout_height="8dp"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpt4"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:text="6"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>