<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context=".ui.results.ResultsActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/primary_color"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kết Quả Trận Đấu"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvTenPhong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phòng Game 1"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center" />

    </LinearLayout>

    <!-- Results Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@color/card_background">

            <!-- Winner -->
            <TextView
                android:id="@+id/tvNguoiThang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Người thắng: Người chơi 1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/success_color"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Scores -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <!-- Player 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Người chơi 1"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvDiem1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Điểm: 10"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        android:background="@drawable/score_background"
                        android:padding="16dp" />
                </LinearLayout>

                <!-- VS -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VS"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="16dp" />

                <!-- Player 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Người chơi 2"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvDiem2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Điểm: 8"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        android:background="@drawable/score_background"
                        android:padding="16dp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Result message -->
            <TextView
                android:id="@+id/tvKetQua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chúc mừng Người chơi 1 đã chiến thắng!"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:layout_gravity="center"
                android:gravity="center" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Spacer to push buttons to bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="bottom">

        <Button
            android:id="@+id/btnChoiLai"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Chơi Lại"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_primary_background"
            android:layout_marginBottom="12dp"
            android:elevation="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnVeSanh"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Về Sảnh Chờ"
                android:textColor="@color/primary_color"
                android:background="@drawable/button_outline_background"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnChiaSe"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Chia Sẻ"
                android:textColor="@android:color/white"
                android:background="@drawable/button_secondary_background"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
