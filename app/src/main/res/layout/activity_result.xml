<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/layout_header_result"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/color_gold" android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_result_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_trophy"
            app:tint="@color/white" android:contentDescription="@string/result_icon_desc" />

        <TextView
            android:id="@+id/tv_result_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result_win"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_score_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_score"
        android:textSize="18sp"
        android:textColor="@color/text_tertiary_gray" android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/tv_final_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1500"
        android:textSize="60sp"
        android:textColor="@color/color_gold" android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_correct_answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/correct_answers_format"
        android:textSize="16sp"
        android:textColor="@color/text_secondary_dark_gray"
        android:layout_marginTop="10dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btn_play_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/play_again"
        android:backgroundTint="@color/purple_primary" android:textColor="@color/white"
        android:paddingVertical="15dp"
        android:textSize="18sp"
        android:layout_marginHorizontal="24dp" />

    <Button
        android:id="@+id/btn_back_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back_to_home"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/purple_light" android:textColor="@color/purple_primary"
        android:paddingVertical="15dp"
        android:textSize="18sp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp" />

</LinearLayout>