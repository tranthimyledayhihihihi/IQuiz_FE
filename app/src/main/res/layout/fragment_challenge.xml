<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@color/bg_secondary">

    <TextView
        android:id="@+id/tvTitleChallenge"
        android:text="Thử thách ngẫu nhiên"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvSubtitleChallenge"
        android:text="Chọn chế độ chơi và bắt đầu chinh phục câu hỏi."
        android:textColor="@color/text_tertiary"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- Chips chọn chế độ -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chipSurvival"
            android:text="Sinh tồn"
            android:textColor="@color/purple_primary"
            android:background="@drawable/bg_chip"
            android:layout_marginEnd="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/chipSpeed"
            android:text="Tốc độ"
            android:textColor="@color/purple_primary"
            android:background="@drawable/bg_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- Card mô tả chế độ -->
    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_card">

        <TextView
            android:id="@+id/tvMode"
            android:text="Chế độ: Sinh tồn"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/tvModeDesc"
            android:text="Trả lời liên tiếp, sai là dừng lại. Xem bạn trụ được bao lâu!"
            android:textColor="@color/text_tertiary"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/btnStart"
            android:text="Bắt đầu"
            android:textAllCaps="false"
            android:textColor="@color/text_primary"
            android:backgroundTint="@color/purple_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
