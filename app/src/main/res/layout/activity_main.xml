<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Demo Giao Diện Result &amp; Rewards"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btn_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Màn hình Kết Quả"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_daily_reward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Màn hình Thưởng Hàng Ngày"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_achievement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Màn hình Thành Tựu"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Màn hình Thống Kê"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_streak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. Màn hình Chuỗi Ngày"
        android:layout_marginBottom="8dp"/>

</LinearLayout>