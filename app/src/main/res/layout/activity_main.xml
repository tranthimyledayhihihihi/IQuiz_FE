<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9FB"  android:padding="32dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtAppName"
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IQ5 Quiz App"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#000000"  android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toTopOf="@+id/btnStartQuiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnStartQuiz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BẮT ĐẦU QUIZ"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#6C4FFF"  android:textColor="#FFFFFF"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnReview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/btnReview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="XEM LẠI CÂU HỎI"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#E8E3FF"  android:textColor="#6C4FFF"  style="@style/Widget.AppCompat.Button.Borderless" app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@+id/btnStartQuiz"
        app:layout_constraintBottom_toTopOf="@+id/btnSpecialMode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnSpecialMode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CHẾ ĐỘ ĐẶC BIỆT"
        android:padding="16dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="#00D4FF"  android:textColor="#FFFFFF"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@+id/btnReview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Chào mừng đến với IQuiz!"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/btnGoToOnline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
        android:layout_marginBottom="32dp"/>

    <!-- NÚT 1: ĐI VÀO LUỒNG CHƠI GAME (MÀN HÌNH BẠN GỬI) -->
    <Button
        android:id="@+id/btnGoToOnline"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="Chơi Online"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <!-- NÚT 2: ĐI VÀO LUỒNG XÃ HỘI (BẠN BÈ + BXH) -->
    <Button
        android:id="@+id/btnGoToSocial"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Bạn bè &amp; BXH"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btnGoToOnline"
        app:layout_constraintStart_toStartOf="@id/btnGoToOnline"
        app:layout_constraintEnd_toEndOf="@id/btnGoToOnline"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>