<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chào mừng đến với IQuiz!"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/btnGoToOnline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="32dp"/>

    <!-- NÚT 1: ĐI VÀO LUỒNG CHƠI GAME (MÀN HÌNH BẠN GỬI) -->
    <Button
        android:id="@+id/btnGoToOnline"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="Chơi Online"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <!-- NÚT 2: ĐI VÀO LUỒNG XÃ HỘI (BẠN BÈ + BXH) -->
    <Button
        android:id="@+id/btnGoToSocial"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Bạn bè &amp; BXH"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btnGoToOnline"
        app:layout_constraintStart_toStartOf="@id/btnGoToOnline"
        app:layout_constraintEnd_toEndOf="@id/btnGoToOnline"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>