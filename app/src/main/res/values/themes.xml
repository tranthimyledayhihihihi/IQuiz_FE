<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SpecialModes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Nền app -->
        <item name="android:windowBackground">@color/bg_secondary</item>
        <item name="android:navigationBarColor">@color/bg_primary</item>
        <item name="android:statusBarColor">@color/purple_primary</item>

        <!-- Status bar chữ tối vì nền sáng -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Material 3 colors -->
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorOnPrimary">@color/bg_primary</item>

        <item name="colorSecondary">@color/cyan_accent</item>
        <item name="colorOnSecondary">@color/bg_primary</item>

        <item name="colorSurface">@color/bg_primary</item>
        <item name="colorOnSurface">@color/text_secondary</item>

        <!-- KHÔNG dùng colorBackground ở đây, tránh lỗi attr -->
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
