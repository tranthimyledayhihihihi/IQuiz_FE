<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.IQuiz" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/textWhite</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryDark</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/textWhite</item>
        <item name="colorSecondaryContainer">@color/button_cyan</item>

        <!-- System bars & background -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/bg_primary</item>
        <item name="android:windowBackground">@color/bg_primary</item>

        <!-- Text -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Controls -->
        <item name="android:colorControlNormal">@color/input_border</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>

        <!-- CardView -->
        <item name="cardViewStyle">@style/Widget.Material3.CardView.Filled</item>
        <item name="android:colorBackground">@color/bg_primary</item>
    </style>

</resources>
