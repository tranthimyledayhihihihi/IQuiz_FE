<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ðŸŒ Text Styles -->
    <style name="TextWhite">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- ðŸŸ£ Input Field -->
    <style name="InputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="boxStrokeColor">@color/input_border</item>
        <item name="boxBackgroundColor">@color/bg_secondary</item>
    </style>

    <!-- ðŸŸ¦ Buttons -->
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="ButtonCyan" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/button_cyan</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/button_secondary</item>
        <item name="android:textColor">@color/button_primary</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="ButtonDanger" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/button_danger</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="cornerRadius">12dp</item>
    </style>

</resources>
