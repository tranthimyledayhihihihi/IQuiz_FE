<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_home"
    android:padding="16dp">

    <!-- Thanh trên: Avatar + Cài đặt -->
    <ImageView
        android:id="@+id/btnProfile"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_user_placeholder"
        android:background="@drawable/circle_bg"
        android:padding="8dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:contentDescription="Avatar người dùng"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp" />

    <ImageView
        android:id="@+id/btnSettings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_settings"
        android:background="@drawable/circle_bg"
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:contentDescription="Cài đặt" />

    <!-- Logo và tiêu đề -->
    <LinearLayout
        android:id="@+id/header"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/btnProfile"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_splash_gradient"
        android:padding="16dp">

        <TextView
            android:text="IQUIZ"
            style="@style/TextWhite"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Đấu trường tri thức"
            style="@style/TextWhite"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Các nút chức năng chính -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/header"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Chủ đề Quiz"
            android:id="@+id/btnQuiz"
            style="@style/ButtonPrimary"
            android:layout_marginBottom="12dp" />

        <Button
            android:text="Chơi hằng ngày"
            android:id="@+id/btnDaily"
            style="@style/ButtonCyan"
            android:layout_marginBottom="12dp" />

        <Button
            android:text="Đấu trực tiếp"
            android:id="@+id/btnBattle"
            style="@style/ButtonSecondary"
            android:layout_marginBottom="12dp" />
    </LinearLayout>

    <!-- Nút đăng xuất -->
    <Button
        android:id="@+id/btnLogout"
        android:text="Đăng xuất"
        style="@style/ButtonDanger"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp" />
</RelativeLayout>
