<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TEXT STYLES -->
    <style name="TextWhite">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="HeaderText.Bold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="SubHeaderText.Bold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="LifelineItemTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- INPUT FIELD -->
    <style name="InputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="boxStrokeColor">@color/input_border</item>
        <item name="boxBackgroundColor">@color/bg_secondary</item>
    </style>

    <!-- AVATAR / IMAGE -->
    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- MATERIAL BUTTONS (NÊN DÙNG) -->
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/purple_light</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ButtonDanger" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/button_danger</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="ButtonCyan" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="backgroundTint">@color/button_cyan</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:drawableTint">?android:attr/textColor</item>
    </style>

    <!-- APPCompat BUTTONS (NẾU LAYOUT CŨ ĐANG DÙNG) -->
    <style name="Button.Primary" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Secondary" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/purple_primary</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
