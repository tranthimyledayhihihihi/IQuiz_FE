<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Cho phép HTTP traffic (cần thiết cho development với localhost) -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Domain cụ thể cho development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android Emulator -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">192.168.214.1</domain> <!-- Machine IP -->
        <domain includeSubdomains="true">192.168.1.100</domain> <!-- Backup IP -->
    </domain-config>
</network-security-config>
