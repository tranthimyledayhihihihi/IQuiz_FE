<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@color/colorBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgSmallAvatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_avatar_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvSmallName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        app:layout_constraintStart_toEndOf="@id/imgSmallAvatar"
        app:layout_constraintTop_toTopOf="@id/imgSmallAvatar"
        tools:text="Bạn (Tôi)"/> <TextView
    android:id="@+id/tvSmallStatus"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:textSize="12sp"
    app:layout_constraintStart_toEndOf="@id/imgSmallAvatar"
    app:layout_constraintTop_toBottomOf="@id/tvSmallName"
    tools:text="Online | Ready"
    tools:textColor="#4CAF50"/> <TextView
    android:id="@+id/tvSmallScore"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:textStyle="bold"
    android:textColor="@color/colorAccent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:text="1250 điểm"/> </androidx.constraintlayout.widget.ConstraintLayout>