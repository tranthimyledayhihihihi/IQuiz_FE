<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"  android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"  app:cardElevation="4dp"
    android:background="#FFFFFF"  app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtStatusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/badge_default_bg"  android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="SAI"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:backgroundTint="#FF3B30"  app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txtReviewQuestion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Nội dung Câu hỏi sẽ hiển thị ở đây?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"  app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txtStatusBadge" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E5EA"  android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@+id/txtReviewQuestion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txtCorrectAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đáp án đúng: [Correct Answer]"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#34C759"  android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <TextView
            android:id="@+id/txtUserAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn đã chọn: [User Answer]"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="#FF3B30"  android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCorrectAnswer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>