<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Modern Header with gradient -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@drawable/gradient_primary"
            android:clipChildren="false">

            <!-- Status bar overlay -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="@color/purple_primary_dark"/>

            <!-- Header content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Top bar -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp">

                    <!-- Back button -->
                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/bg_circle_white_20"
                        android:src="@drawable/ic_arrow_back"
                        android:tint="@color/white"
                        android:contentDescription="Quay lại"
                        android:elevation="2dp"/>

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Hồ Sơ Cá Nhân"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"/>

                    <!-- Edit button -->
                    <ImageButton
                        android:id="@+id/btnEdit"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/bg_circle_white_20"
                        android:src="@drawable/ic_edit"
                        android:tint="@color/white"
                        android:contentDescription="Chỉnh sửa"
                        android:elevation="2dp"/>
                </RelativeLayout>

                <!-- Avatar with floating effect -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="60dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@color/white">

                        <ImageView
                            android:id="@+id/imgAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_user_placeholder"
                            android:scaleType="centerCrop"
                            android:layout_margin="4dp"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Online status indicator -->
                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/bg_circle_green"
                        android:elevation="10dp"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <!-- User Info Card with modern design -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="-40dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:gravity="center">

                <!-- Name with modern typography -->
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên Người Dùng"
                    android:textSize="26sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="16dp"/>

                <!-- Email with icon -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:text="📧"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="email@example.com"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>

                <!-- Role badge with modern styling -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/tvRole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎓 Sinh Viên"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_role_badge"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>

                <!-- Join date -->
                <TextView
                    android:id="@+id/tvJoinDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tham gia từ tháng 12/2024"
                    android:textSize="12sp"
                    android:textColor="@color/text_hint"
                    android:layout_marginTop="12dp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Enhanced Stats Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="24dp"
            android:weightSum="2">

            <!-- Quiz Stats Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <View
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_circle_blue_light"/>

                    <TextView
                        android:text="📚"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-36dp"/>

                    <TextView
                        android:id="@+id/tvQuizTaken"
                        android:text="0"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:textSize="28sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:text="Bài Quiz Hoàn Thành"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Score Stats Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <View
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_circle_orange_light"/>

                    <TextView
                        android:text="⭐"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-36dp"/>

                    <TextView
                        android:id="@+id/tvAvgScore"
                        android:text="0"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:textSize="28sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:text="Điểm Trung Bình"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Ranking Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_circle_gold_light"/>

                <TextView
                    android:text="🏆"
                    android:textSize="28sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-42dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">

                    <TextView
                        android:text="Xếp Hạng Hiện Tại"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"/>

                    <TextView
                        android:id="@+id/tvRank"
                        android:text="Chưa có xếp hạng"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>

                <TextView
                    android:text="›"
                    android:textSize="24sp"
                    android:textColor="@color/text_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cài Đặt &amp; Tùy Chọn"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium"/>

        <!-- Modern Action Buttons -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Settings Button -->
                <LinearLayout
                    android:id="@+id/btnSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground">

                    <View
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_circle_blue_light"/>

                    <TextView
                        android:text="⚙️"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-32dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="20dp">

                        <TextView
                            android:text="Cài Đặt Tài Khoản"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:text="Thay đổi thông tin cá nhân"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="sans-serif"/>
                    </LinearLayout>

                    <TextView
                        android:text="›"
                        android:textSize="20sp"
                        android:textColor="@color/text_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_light"
                    android:layout_marginStart="64dp"/>

                <!-- Share Button -->
                <LinearLayout
                    android:id="@+id/btnShare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground">

                    <View
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_circle_green_light"/>

                    <TextView
                        android:text="📤"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-32dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="20dp">

                        <TextView
                            android:text="Chia Sẻ Ứng Dụng"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:text="Giới thiệu với bạn bè"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="sans-serif"/>
                    </LinearLayout>

                    <TextView
                        android:text="›"
                        android:textSize="20sp"
                        android:textColor="@color/text_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_light"
                    android:layout_marginStart="64dp"/>

                <!-- Logout Button -->
                <LinearLayout
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground">

                    <View
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_circle_red_light"/>

                    <TextView
                        android:text="🚪"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-32dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="20dp">

                        <TextView
                            android:text="Đăng Xuất"
                            android:textSize="16sp"
                            android:textColor="@color/button_danger"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:text="Thoát khỏi tài khoản"
                            android:textSize="12sp"
                            android:textColor="@color/button_danger"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="sans-serif"/>
                    </LinearLayout>

                    <TextView
                        android:text="›"
                        android:textSize="20sp"
                        android:textColor="@color/button_danger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- App Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IQuiz App"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 1.0.0"
                android:textSize="12sp"
                android:textColor="@color/text_hint"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
