<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- BADGE -->
        <TextView
            android:id="@+id/txtStatusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="SAI"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/badge_default_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:backgroundTint="#FF3B30" />

        <!-- QUESTION -->
        <TextView
            android:id="@+id/txtReviewQuestion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="1. Nội dung Câu hỏi sẽ hiển thị ở đây?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txtStatusBadge" />

        <!-- DIVIDER -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#E5E7EB"
            app:layout_constraintTop_toBottomOf="@id/txtReviewQuestion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- CORRECT ANSWER BOX -->
        <TextView
            android:id="@+id/txtCorrectAnswer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:text="✅ Đáp án đúng: A. ... "
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#16A34A"
            android:background="#ECFDF5"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="✅ Đáp án đúng: B. Hà Nội" />

        <!-- USER ANSWER BOX -->
        <TextView
            android:id="@+id/txtUserAnswer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:text="❌ Bạn đã chọn: C. ... "
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#EF4444"
            android:background="#FEF2F2"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/txtCorrectAnswer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible"
            tools:text="❌ Bạn đã chọn: A. Đà Nẵng" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
