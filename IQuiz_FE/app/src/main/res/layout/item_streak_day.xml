<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/color_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_streak_status_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_check_circle"
            app:tint="@color/color_success"
            android:contentDescription="Status"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tv_streak_day_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày 30"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/color_black"/>

            <TextView
                android:id="@+id/tv_streak_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/11/2025"
                android:textSize="12sp"
                android:textColor="@color/color_text_tertiary"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_streak_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 500 ĐIỂM"
            android:textSize="14sp"
            android:textColor="@color/color_cyan_accent"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>